# ============================================================================
# Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# The .env file should NEVER be committed to version control
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual credentials and settings
# ============================================================================

# Application Environment
# -----------------------
# Options: development, staging, production
# This determines which base URL and configuration to use
ENV=development

# Base URLs per Environment
# -------------------------
# Development environment (default: SauceDemo)
BASE_URL_DEV=https://www.saucedemo.com

# Staging environment (if you have one)
BASE_URL_STAGING=https://www.saucedemo.com

# Production environment
BASE_URL_PROD=https://www.saucedemo.com

# Test User Credentials
# ---------------------
# Standard user credentials (for successful login tests)
STANDARD_USER=standard_user
STANDARD_PASSWORD=secret_sauce

# Locked out user (for negative testing)
LOCKED_OUT_USER=locked_out_user

# Problem user (user with problematic behavior)
PROBLEM_USER=problem_user

# Performance glitch user
PERFORMANCE_GLITCH_USER=performance_glitch_user

# Error user
ERROR_USER=error_user

# Visual user
VISUAL_USER=visual_user

# Default password for all test users
DEFAULT_PASSWORD=secret_sauce

# Browser Configuration
# ---------------------
# Browser type: chromium, firefox, webkit
BROWSER=chromium

# Headless mode: true or false
# Set to false to see the browser during test execution (useful for debugging)
HEADLESS=true

# Browser window size
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Slow motion (milliseconds to slow down operations - useful for debugging)
# Set to 0 for no slow motion
SLOW_MO=0

# Test Execution Configuration
# ----------------------------
# Maximum time (ms) to wait for page load
PAGE_LOAD_TIMEOUT=30000

# Default timeout for assertions and waits (ms)
DEFAULT_TIMEOUT=30000

# Number of workers for parallel test execution
# Set to 1 for serial execution, or number of CPU cores for parallel
WORKERS=4

# Test retries on failure
MAX_FAILURES=1
RETRIES=1

# Playwright Trace & Debug
# ------------------------
# Trace mode: on, off, retain-on-failure, on-first-retry
TRACE_MODE=retain-on-failure

# Video recording: on, off, retain-on-failure, on-first-retry
VIDEO_MODE=retain-on-failure

# Screenshot on failure: true or false
SCREENSHOT_ON_FAILURE=true

# Logging Configuration
# ---------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable console logging: true or false
LOG_TO_CONSOLE=true

# Enable file logging: true or false
LOG_TO_FILE=true

# Log file path (relative to project root)
LOG_FILE_PATH=logs/test_execution.log

# Reporting Configuration
# -----------------------
# Enable HTML report: true or false
ENABLE_HTML_REPORT=true

# Enable Allure report: true or false
ENABLE_ALLURE_REPORT=true

# Report directory (relative to project root)
REPORT_DIR=reports

# CI/CD Configuration
# -------------------
# Set to true when running in CI/CD pipeline
CI=false

# CI platform: gitlab, github, jenkins, local
CI_PLATFORM=local

# API Testing Configuration
# -------------------------
# API base URL (if different from web base URL)
API_BASE_URL=https://www.saucedemo.com

# API timeout (ms)
API_TIMEOUT=10000

# Mobile Emulation Configuration
# ------------------------------
# Enable mobile emulation: true or false
MOBILE_EMULATION=false

# Device name (when mobile emulation is enabled)
# Options: iPhone 13, Pixel 5, iPad Pro, etc.
# See: https://playwright.dev/docs/emulation#devices
DEVICE_NAME=iPhone 13

# Geolocation Configuration
# -------------------------
# Enable geolocation: true or false
ENABLE_GEOLOCATION=false

# Latitude and longitude (when geolocation is enabled)
LATITUDE=37.7749
LONGITUDE=-122.4194

# Timezone
TIMEZONE=America/Los_Angeles

# Locale & Language
# -----------------
# Locale for the browser
LOCALE=en-US

# Timezone for the browser
BROWSER_TIMEZONE=America/Los_Angeles

# Advanced Configuration
# ----------------------
# Accept downloads: true or false
ACCEPT_DOWNLOADS=true

# Downloads directory (relative to project root)
DOWNLOADS_DIR=downloads

# Ignore HTTPS errors: true or false (use with caution!)
IGNORE_HTTPS_ERRORS=false

# User agent override (leave empty for default)
USER_AGENT=

# Extra HTTP headers (JSON format)
EXTRA_HTTP_HEADERS={}

# Proxy Configuration (Optional)
# ------------------------------
# HTTP proxy server
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS proxy server
# HTTPS_PROXY=https://proxy.example.com:8080

# Bypass proxy for these hosts
# NO_PROXY=localhost,127.0.0.1
